{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="mb-4 text-center">Create a New Comment</h1>

                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.content) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.rating, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.rating, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.rating) }}
                            </div>
                        </div>

                        <button class="btn btn-primary w-100" type="submit">Create Comment</button>
                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-3 text-center">
                    <a href="{{ path('posts_list') }}" class="btn btn-secondary">Back to All Posts</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
