{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Edit Editor</h1>
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.birthDate, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.birthDate, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.birthDate) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.nationality, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nationality, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nationality) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.books, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.books, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.books) }}
                </div>

                <button type="submit" class="btn btn-success">Update</button>
                <a href="{{ path('authors_index') }}" class="btn btn-secondary">Back to List</a>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
